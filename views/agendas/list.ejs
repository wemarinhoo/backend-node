<%- include("includes/header"); %>

<div class="container">
    <h3>Lista de Contatos</h3>
    <div>
        <a type="button" class="btn btn-primary" href="/agendas/create">Adicionar Contato</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Celular</th>
                <th>Email</th>
                <th>Opções</th>
            </tr>
        </thead>
        <tbody>
            <% for(const agenda of agendas) { %>
                <tr>
                    <td>
                        <%= agenda.name %>
                    </td>
                    <td>
                        <%= agenda.phoneNumber %>
                    </td>
                    <td>
                        <%= agenda.email %>
                    </td>
                    <td>
                        <a class="btn btn-success" href="/agendas/edit/<%= agenda.id %>">Editar</a>
                        <form action="/agendas/remove/<%= agenda.id %>" method="POST" style="display: inline-block"
                            onsubmit="return confirm('Tem certeza que deseja excluir esse contato?')">
                            <button type="submit" class="btn btn-danger">Excluir</button>
                        </form>
                    </td>
                </tr>
                <% } %>
        </tbody>
    </table>
</div>


<%- include("includes/footer"); %>
